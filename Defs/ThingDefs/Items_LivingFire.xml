<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef>
    <defName>Fluffy_LivingFire</defName>
    <label>living fire</label>
    <description>The heart of an extinguished Feenix, still pulsing with heat. Prized by traders for their supposed medicinal values and uses in alchemy.</description>
    <thingClass>ThingWithComps</thingClass>
    <comps>
      <li Class="CompProperties_HeatPusher">
        <heatPushMaxTemperature>50</heatPushMaxTemperature>
        <heatPerSecond>100</heatPerSecond>
      </li>     
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(255,150,100,0)</glowColor>
      </li>
    </comps>
    <tickerType>Normal</tickerType>
    <category>Item</category>
    <tradeTags>
      <li>BodyPartOrImplant</li>
    </tradeTags>
    <thingCategories>
      <li>BodyParts</li>
    </thingCategories>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>1</stackLimit>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <MarketValue>10000</MarketValue>
    </statBases>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Item/LivingFire</texPath>
    </graphicData>
  </ThingDef>
</Defs>