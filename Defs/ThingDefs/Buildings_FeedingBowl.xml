<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>
  
  <ThingDef Name="FurnitureBase" ParentName="BuildingBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <DesignationCategory>Furniture</DesignationCategory>
    <minifiedDef>MinifiedFurniture</minifiedDef>
  </ThingDef>

  <ThingDef ParentName="FurnitureBase">
    <defName>Fluffy_FeedingBowl</defName>
    <label>feeding bowl</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/FeedingBowl</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>.5</drawSize>
      <shadowData>
        <volume>(0.2, 0.3, 0.2)</volume>
      </shadowData>
    </graphicData>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>
      <WorkToMake>100</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>5</Beauty>
    </statBases>
    <description>Provide your pets with conveniently located feeding bowls.</description>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>PlantFoodRaw</li>
            <li>Fluffy_CatFoods</li>
          </categories>
          <disallowedSpecialFilters>
            <li>AllowRotten</li>
          </disallowedSpecialFilters>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Fluffy_CatFoods</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <surfaceType>Item</surfaceType>
  </ThingDef>

  <ThingDef ParentName="FurnitureBase">
    <defName>Fluffy_ScratchingPole</defName>
    <label>scratching pole</label>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>Things/Building/ScratchingPost</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>.75</drawSize>
      <shadowData>
        <volume>(0.2, 0.5, 0.2)</volume>
      </shadowData>
    </graphicData>
    <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>200</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>5</Beauty>
    </statBases>
    <description>Provide your cats with a place to sharpen their claws.</description>
  </ThingDef>
</Buildings>

